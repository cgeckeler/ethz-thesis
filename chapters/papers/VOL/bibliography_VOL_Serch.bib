	note = {Publisher: Blackwell Publishing Ltd},
	keywords = {Eulophidae, Euplectrus platyhypenae, Hymenoptera, Lepidoptera, Spodoptera, host switching, indirect effects, koinobiont, life-history traits, milpa, mixed-crop, multitrophic interactions, parasitoid, plant-mediated effects},
