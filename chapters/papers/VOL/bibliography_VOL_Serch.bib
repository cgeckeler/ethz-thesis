	issn = {0027-8424},
	url = {https://pnas.org/doi/full/10.1073/pnas.260499897},
	doi = {10.1073/pnas.260499897},
	abstract = {{\textless}p{\textgreater} Maize and a variety of other plant species release volatile compounds in response to herbivore attack that serve as chemical cues to signal natural enemies of the feeding herbivore. {\textless}italic{\textgreater}N-{\textless}/italic{\textgreater} (17-hydroxylinolenoyl)- \textsc{l} -glutamine is an elicitor component that has been isolated and chemically characterized from the regurgitant of the herbivore-pest beet armyworm. This fatty acid derivative, referred to as volicitin, triggers the synthesis and release of volatile components, including terpenoids and indole in maize. Here we report on a previously unidentified enzyme, indole-3-glycerol phosphate lyase (IGL), that catalyzes the formation of free indole and is selectively activated by volicitin. IGL's enzymatic properties are similar to BX1, a maize enzyme that serves as the entry point to the secondary defense metabolites DIBOA and DIMBOA. Gene-sequence analysis indicates that {\textless}italic{\textgreater}Igl{\textless}/italic{\textgreater} and {\textless}italic{\textgreater}Bx1{\textless}/italic{\textgreater} are evolutionarily related to the tryptophan synthase alpha subunit. {\textless}/p{\textgreater}},
	number = {26},
	urldate = {2022-06-20},
	journal = {Proceedings of the National Academy of Sciences},
	author = {Frey, Monika and Stettner, Cornelia and Paré, Paul W. and Schmelz, Eric A. and Tumlinson, James H. and Gierl, Alfons},
	month = dec,
	year = {2000},
	pages = {14801--14806},
}

@article{shen_maize_2000,
	title = {A maize sesquiterpene cyclase gene induced by insect herbivory and volicitin: {Characterization} of wild-type and mutant alleles},
	volume = {97},
	issn = {0027-8424},
	url = {https://pnas.org/doi/full/10.1073/pnas.240284097},
	doi = {10.1073/pnas.240284097},
	abstract = {{\textless}p{\textgreater} Plants can defend themselves from herbivorous insects by emitting volatile chemical signals that attract natural enemies of the herbivore. For example, maize seedlings attacked by beet armyworm larvae ( {\textless}italic{\textgreater}Spodoptera exigua{\textless}/italic{\textgreater} ) produce a mixture of terpenoid and indole volatiles that serve to attract parasitic wasps. A key step in terpenoid biosynthesis is the conversion of acyclic prenyl diphosphates to terpenoid compounds by specific terpenoid synthases (cyclases). We have cloned a maize sesquiterpene cyclase gene, {\textless}italic{\textgreater}stc1{\textless}/italic{\textgreater} , by transposon tagging and have identified two deletion mutations of the gene. The {\textless}italic{\textgreater}stc1{\textless}/italic{\textgreater} gene is located on chromosome 9S and does not seem to have a closely related ortholog in the maize genome. It is induced 15- to 30-fold in maize leaves by beet armyworm larvae feeding or by application of purified volicitin, the insect-derived elicitor, at a mechanically wounded site. {\textless}italic{\textgreater}stc1{\textless}/italic{\textgreater} induction is systemic, because undamaged leaves of the same plant show a similar increase in {\textless}italic{\textgreater}stc1{\textless}/italic{\textgreater} transcription. Analysis of volatiles from volicitin-treated seedlings revealed that a major naphthalene-based sesquiterpene was present in wild-type seedlings but absent in the {\textless}italic{\textgreater}Ac{\textless}/italic{\textgreater} -insertion and x-ray-deletion mutants. Therefore, we have identified a maize gene that responds to caterpillar herbivory by producing a chemical defense signal that most likely serves to attract natural enemies of the herbivore. {\textless}/p{\textgreater}},
	number = {26},
	journal = {Proceedings of the National Academy of Sciences},
	author = {Shen, Binzhang and Zheng, Zhenwei and Dooner, Hugo K.},
	month = dec,
	year = {2000},
	pages = {14807--14812},
}
