	journal = {Plant Signaling and Behavior},
	author = {Yan, Yuanxin and Huang, Pei Cheng and Borrego, Eli and Kolomiets, Michael},
	year = {2014},
	note = {Publisher: Landes Bioscience},
	keywords = {Jasmonate biosynthesis, Maize, Pythium, Tasselseeds},
	pages = {1--5},
}

@article{penaflor_oviposition_2011,
	title = {Oviposition by a moth suppresses constitutive and herbivore-induced plant volatiles in maize},
	volume = {234},
	issn = {14322048},
	doi = {10.1007/s00425-011-1409-9},
	abstract = {Plant volatiles function as important signals for herbivores, parasitoids, predators, and neighboring plants. Herbivore attack can dramatically increase plant volatile emissions in many species. However, plants do not only react to herbivore-inflicted damage, but also already start adjusting their metabolism upon egg deposition by insects. Several studies have found evidence that egg deposition itself can induce the release of volatiles, but little is known about the effects of oviposition on the volatiles released in response to subsequent herbivory. To study this we measured the effect of oviposition by Spodoptera frugiperda (J. E. Smith) (Lepidoptera: Noctuidae) moths on constitutive and herbivore-induced volatiles in maize (Zea mays L.). Results demonstrate that egg deposition reduces the constitutive emission of volatiles and suppresses the typical burst of inducible volatiles following mechanical damage and application of caterpillar regurgitant, a treatment that mimics herbivory. We discuss the possible mechanisms responsible for reducing the plant's signaling capacity triggered by S. frugiperda oviposition and how suppression of volatile organic compounds can influence the interaction between the plant, the herbivore, and other organisms in its environment. Future studies should consider oviposition as a potential modulator of plant responses to insect herbivores. © 2011 Springer-Verlag.},
	number = {1},
	journal = {Planta},
	author = {Peñaflor, M. Fernanda Gomes Villalba and Erb, Matthias and Robert, Christelle Aurélie Maud and Miranda, Livia Atauri and Werneburg, Andrea Graf and Dossi, Fábio Cleisto Alda and Turlings, Ted C.J. and Bento, J. Maurício Simões},
	year = {2011},
