	journal = {Plant Journal},
	author = {Li, Shengyan and Wang, Hai and Li, Fengqi and Chen, Zhongliang and Li, Xiuying and Zhu, Li and Wang, Guirong and Yu, Jingjuan and Huang, Dafang and Lang, Zhihong},
