	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/nph.18432},
	keywords = {cue, ecological interactions, information recovery, signal, volatile organic compounds},
	pages = {1605--1619},
}

@article{yao_stemborer-induced_nodate,
