	author = {Robert, Christelle Aurélie Maud and Erb, Matthias and Hiltpold, Ivan and Hibbard, Bruce Elliott and Gaillard, Mickaël David Philippe and Bilat, Julia and Degenhardt, Jörg and Cambet-Petit-Jean, Xavier and Turlings, Ted Christiaan Joannes and Zwahlen, Claudia},
	month = jun,
